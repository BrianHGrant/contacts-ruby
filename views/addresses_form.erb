<h1>Add an Address for <%= @contact.first_name() %> <%= @contact.last_name() %></h1>

<form action="/contact/<%= @contact.id() %>/address" method="post">
  <input id='contact_id' name='contact_id' type='hidden' value='<%= @contact.id() %>'>

  <label for="location_name">Type (i.e. 'Work')</label>
  <input type="text" name="location_name" id="location_name">

  <label for="street">Street Address</label>
  <input type="text" name="street" id="street">

  <label for="city">City</label>
  <input type="text" name="city" id="city">

  <label for="state">State</label>
  <input type="text" name="state" id="state">

  <label for="zip_code">Zip Code</label>
  <input type="text" name="zip_code" id="zip_code">

  <button type="submit">Add Address</button>
</form>
